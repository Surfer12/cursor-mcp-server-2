{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": "./packages",
    "types": ["node"],
  },
  "include": ["packages/**/*.ts"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
